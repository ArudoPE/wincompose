<!-- Intentionally no i18n -->

<Window x:Class="WinCompose.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wincompose="clr-namespace:WinCompose"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Deactivated="OnDeactivated"
        Icon="/WinCompose;component/res/key_compose.png"
        ShowInTaskbar="False"
        ShowActivated="False"
        Focusable="False"
        IsEnabled="False"
        FocusManager.IsFocusScope="False"
        Topmost="True"
        Background="LightGray"
        BorderBrush="DarkGray"
        BorderThickness="1"
        Width="120" Height="40">
    <x:Code>
        <![CDATA[
            //private void OnLeftButtonDown(object sender, MouseButtonEventArgs e) { Hide(); }
            private void OnDeactivated(object sender, EventArgs e) { (sender as Window).Topmost = true; }
        ]]>
    </x:Code>
    <StackPanel Orientation="Vertical">
        <TextBlock Name="PopupText" Background="Transparent"
                   Text="Lol Hi" Margin="12" VerticalAlignment="Center"/>
        <Popup Name="TestBorder" IsOpen="True"
               Width="10" Height="16" AllowsTransparency="True">
            <Border BorderBrush="YellowGreen" BorderThickness="2"/>
        </Popup>
    </StackPanel>
</Window>

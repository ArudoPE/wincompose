<Window x:Class="WinCompose.gui.mainwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:WinCompose.properties"
        Title="WinCompose" Height="600" Width="800">
    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Padding="20, 2" Content="{x:Static properties:resources.Close}" Click="CloseClicked" Margin="8"></Button>
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0">
                <TextBlock DockPanel.Dock="Top" Text="{x:Static properties:resources.Categories}" Margin="8"/>
                <ListBox Margin="8">

                </ListBox>
            </DockPanel>

            <GridSplitter Grid.Column="1" ResizeBehavior="PreviousAndNext" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"/>

            <DockPanel Grid.Column="2">
                <TextBlock DockPanel.Dock="Top" Text="{x:Static properties:resources.Mappings}" Margin="8"/>
                <DockPanel DockPanel.Dock="Bottom">
                    <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:resources.Search}" Margin="8" VerticalAlignment="Center"/>
                    <TextBox Margin="8"/>
                </DockPanel>
                <ListBox Margin="8">

                </ListBox>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
